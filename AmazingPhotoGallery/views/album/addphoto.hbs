<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="post" action="/album/addphoto/{{id}}" enctype="multipart/form-data">
            <fieldset>
                <legend>Add Private</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="pictureTags">Picture Tags</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="pictureTags" placeholder="Picture Tags (split using a comma)" name="tags" required >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Picture</label>
                    <div class="col-sm-4">
                        <input type="file" class="form-control" id="inputPicture" name="picture" required >
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button type="reset" class="btn btn-default">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>