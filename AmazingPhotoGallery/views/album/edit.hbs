<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" id="bigForm" method="POST" action="/album/edit/{{id}}">
            <fieldset>
                <legend>New Album</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="albumName">Album Name</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="albumName" placeholder="Album Name" name="name" value="{{name}}" required >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="albumTheme">Album Theme</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="albumTheme" placeholder="Album Theme" name="theme" value="{{theme}}" required >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="albumTags">Album Tags</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="albumTags" placeholder="Album Tags (split using a comma)" name="tags" value="{{tags}}" required >
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button type="reset" class="btn btn-default">Cancel</button>

                        <button type="submit" form="bigForm" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
